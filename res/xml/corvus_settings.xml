        android:icon="@drawable/ic_raven_buttons"
        android:title="@string/raven_buttons_title"
        android:summary="@string/raven_buttons_summary"/>

    <Preference
        android:fragment="com.android.settings.corvus.fragments.Gaming"
        android:key="gaming_fragment"
        android:icon="@drawable/ic_raven_gaming"
        android:title="@string/raven_gaming_title"
        android:summary="@string/raven_gaming_summary"/>

