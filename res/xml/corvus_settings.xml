    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:key="corvus_settings">

    <Preference
        android:fragment="com.android.settings.corvus.fragments.Theming"
        android:key="theming_fragment"
        android:icon="@drawable/ic_raven_themes"
        android:title="@string/raven_themes_title"
        android:summary="@string/raven_themes_summary"/>

    <Preference
        android:fragment="com.android.settings.corvus.fragments.Statusbar"
        android:key="statusbar_fragment"
        android:icon="@drawable/ic_raven_statusbar"
        android:title="@string/raven_statusbar_title"
        android:summary="@string/raven_statusbar_summary"/>

    <Preference
        android:fragment="com.android.settings.corvus.fragments.QuickSettings"
        android:key="qs_fragment"
        android:icon="@drawable/ic_raven_quicksettings"
        android:title="@string/raven_quicksettings_title"
        android:summary="@string/raven_quicksettings_summary"/>

    <Preference
        android:fragment="com.android.settings.corvus.fragments.Lockscreen"
        android:key="lockscreen_fragment"
        android:icon="@drawable/ic_raven_lockscreen"
